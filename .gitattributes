# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf

# Shell scripts
*.sh text eol=lf

# Config files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf

# Windows batch files
*.bat text eol=crlf
*.ps1 text eol=crlf
